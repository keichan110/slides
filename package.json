{
  "name": "slides-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "presentations/*"
  ],
  "scripts": {
    "create-slide": "node scripts/create-slide.js",
    "dev": "echo 'Please navigate to specific presentation directory and run npm run dev'",
    "build:all": "npm run build --workspaces",
    "export:all": "npm run export --workspaces",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install && npm install --workspaces"
  },
  "dependencies": {
    "@slidev/cli": "^52.1.0",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@slidev/types": "^0.48.0"
  },
  "overrides": {
    "@slidev/cli": "^52.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}